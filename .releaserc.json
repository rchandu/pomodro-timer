{
  "repositoryUrl": "https://github.com/rchandu/pomodro-timer",
  "branches": [
    {
      "name": "main",
      "prerelease": "rc"
    },
    {
      "name": "release/production"
    }
  ],
  "tagFormat": "release/${version}",
  "preset": "conventionalcommits",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "verifyReleaseCmd": "echo ${nextRelease.version} > VERSION",
        "prepareCmd": "sed -i 's/\"version\": \".*\"/\"version\": \"${nextRelease.version}\"/' package.json && sed -i 's/version = \".*\"/version = \"${nextRelease.version}\"/' src-tauri/Cargo.toml"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "src-tauri/Cargo.toml",
          "VERSION"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "src-tauri/target/release/bundle/**/*",
            "label": "Release bundles"
          }
        ]
      }
    ]
  ]
}
